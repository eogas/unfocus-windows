<UserControl x:Class="Unfocus.ReminderBalloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unfocus"
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="200"
             Height="52" Width="200" Padding="5">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Stretch" Stroke="Black" VerticalAlignment="Stretch" RadiusX="4" RadiusY="4" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="Resources/Eyeball.ico" Margin="6" />

            <TextBlock Grid.Column="1" Text="Unfocus your eyes!" Margin="5" VerticalAlignment="Center" />
        </Grid>
        
    </Grid>
</UserControl>
